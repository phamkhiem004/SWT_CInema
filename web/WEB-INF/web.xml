<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>controller.accounts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NowShowingServlet</servlet-name>
        <servlet-class>controller.NowShowingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookingServlet</servlet-name>
        <servlet-class>controller.BookingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChooseComboServlet</servlet-name>
        <servlet-class>controller.ChooseComboServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompletePaymentServlet</servlet-name>
        <servlet-class>controller.CompletePaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NowShowingServlet</servlet-name>
        <url-pattern>/now-showing</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingServlet</servlet-name>
        <url-pattern>/booking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChooseComboServlet</servlet-name>
        <url-pattern>/choose-combo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompletePaymentServlet</servlet-name>
        <url-pattern>/completePayment</url-pattern>
    </servlet-mapping>
</web-app>
